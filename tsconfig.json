{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./test"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "doc",
    "node_modules"
  ],
  "lib": ["dom", "es7"],
  "include": ["src/*.ts",
    "src/**/*.ts"
  ]
}